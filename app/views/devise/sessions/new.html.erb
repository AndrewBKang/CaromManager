<figure class="logo"><a href="/"><img src="/assets/CaromCafeLogo2013.png" width="175"></a></figure>

<div class="devise-container devise-coat">
	<figure class="user-avatar"><img src="/assets/avatar.png" width="96" height="96" alt="Avatar"></figure>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div><%= f.label :email, class: 'hidden' %>
	  <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %></div>

	  <div><%= f.label :password, class: 'hidden' %>
	  <%= f.password_field :password, :placeholder => 'Password' %></div>

	  <div><%= f.submit "Log in", class: 'devise-submit' %></div>
		
	  <% if devise_mapping.rememberable? -%>
	    <div id="remember"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>
		
	<% end %>

	<%= render "devise/shared/links" %>
</div>