<div class="overlay">
	<div class="devise-container">
		<h2>Log in</h2>

		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div><%= f.label :email, class: 'hidden' %>
		  <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %></div>

		  <div><%= f.label :password, class: 'hidden' %>
		  <%= f.password_field :password, :placeholder => 'Password' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>

		  <div><%= f.submit "Log in", class: 'devise-submit' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>